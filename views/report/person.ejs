<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/asset/css/report1.css" />
  </head>
  <body>
    <div class="page">
      <div class="text-center fw-bold">LAPORAN PRODUKTIVITAS KERJA PEGAWAI</div>
      <br />
      <table class="header">
        <tr>
          <th>NAMA</th>
          <td><span>: </span><span><%= user.nama %></span></td>
        </tr>
        <tr>
          <th>NIP</th>
          <td><span>: </span><span><%= user.nip %></span></td>
        </tr>
        <tr>
          <th>JABATAN</th>
          <td><span>: </span><span><%= user.jab %></span></td>
        </tr>
        <tr>
          <th>UNIT KERJA</th>
          <td><span>: </span><span><%= user.departemen.bidang %></span></td>
        </tr>
        <tr>
          <th>PERIODE</th>
          <td><span>: </span> <span><%= periode %></span></td>
        </tr>
      </table>

      <table>
        <thead>
          <tr>
            <th>NO</th>
            <th>HARI / TANGGAL</th>
            <th>RINCIAN AKTIVITAS KERJA/TUGAS</th>
            <th>VOLUME KEGIATAN</th>
            <th>SATUAN KEGIATAN</th>
            <th>WAKTU PENYELESAIAN</th>
          </tr>
        </thead>
        <tbody>
          <% progress.forEach(item => { %>
          <tr>
            <td><%= item.no %></td>
            <td><%= item.tanggal %></td>
            <td><%= item.rak %></td>
            <td><%= item.volume %></td>
            <td><%= item.satuan %></td>
            <td class="text-end" ><span style=" float: left;"> <%= item.waktu %></span> Menit</td>
          </tr>
          <% }); %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="5">Capaian Kinerja</th>
            <td><span><%= capaian %></span></td>
          </tr>
          <tr>
            <th colspan="5">Kategori</th>
            <td><span><%= kategori %></span></td>
          </tr>
          <tr>
            <th colspan="5">Besaran TPP dari Produktivitas Kerja</th>
            <td><span><%= tpp %></span></td>
          </tr>
        </tfoot>
      </table>
      <br />
      <table class="foots">
        <tr>
          <th>
            <br />
            Mengetahui
            <br />
            Atasan Langsung,
          </th>
          <th>
            <div class="date">Singkawang, <span><%= lastDate %></span></div>
            <br />
            Yang Membuat Laporan,
          </th>
        </tr>
        <tr>
          <td>
            <div class="signature">
              <br />
              <br />
              <br />
              <div class="name"><span><%= atasan.nama %></span></div>
              <div class="nip"><span>NIP. </span><%= atasan.nip %></div>
            </div>
          </td>
          <td>
            <div class="signature">
              <br />
              <br />
              <br />
              <div class="name"><%= user.nama %></div>
              <div class="nip"><span>NIP. </span> <%= user.nip %></div>
            </div>
          </td>
        </tr>
      </table>
    </div>
    <script>
      window.onload = function () {
        window.print();
      };
    </script>
  </body>
</html>
