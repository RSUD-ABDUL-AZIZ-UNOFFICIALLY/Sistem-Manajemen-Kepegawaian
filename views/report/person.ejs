          <th>WAKTU PENYELESAIAN</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(item => { %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.name %></td>
          <td><%= item.name %></td>
          <td><%= item.age %></td>
          <td><%= item.age %></td>
        </tr>
        <% }); %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="5">Capaian Kinerja</th>
          <td>84%</td>
        </tr>
        <tr>
          <th colspan="5">Kategori</th>
          <td>84%</td>
        </tr>
        <tr>
          <th colspan="5">Besaran TPP dari Produktivitas Kerja</th>
          <td>84%</td>
        </tr>
      </tfoot>
    </table>
    <div class="title">LAPORAN</div>
    <div class="date">Singkawang, 28 April 2023</div>
