    /* Style untuk konten halaman */

      table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
      }

      table th,
      table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }

      table th {
        background-color: #f2f2f2;
      }
      
      th:nth-child(1), td:nth-child(1) {
  width: 10px;
}

th:nth-child(2), td:nth-child(2) {
  width: 30px;
}

th:nth-child(3), td:nth-child(3) {
  width: 250px;
}
th:nth-child(4), td:nth-child(4) {
  width: 100px;
}
th:nth-child(5), td:nth-child(5) {
  width: 100px;
}
th:nth-child(6), td:nth-child(6) {
  width: 100px;
}


      h1,
      h2 {
        margin-top: 0;
      }
      tfoot th {
        background-color: #ffffff; /* ubah warna latar belakang */
        text-align: center;
      }
      /* Tabel 2 */
      table.header {
        width: 50%;
        margin-bottom: 10px;
        border: none;
        /* border: 1px solid #ddd; */
        /* border-collapse: collapse; */
      }

      table.header th,
      table.header td {
        padding: 1px;
        text-align: left;
        border: none;
        /* border: 1px solid #ddd; */
      }

      table.header th {
        background-color: #ffffff;
      }
    </style>
  </head>
  <body>
    <div class="text-center ">LAPORAN PRODUKTIVITAS KERJA PEGAWAI</div>
    <table class="header">
      <tr>
        <th>NAMA</th>
        <td>:EKO SUDARMONO, S.A.P.</td>
      </tr>
      <tr>
        <th>NIP</th>
        <td>:198310092007011007</td>
      </tr>
      <tr>
        <th>JABATAN</th>
        <td>:Analis Kepegawaian Ahli Pertama (8)</td>
      </tr>
      <tr>
        <th>UNIT KERJA</th>
        <td>:Bagian Umum dan Kepegawaian</td>
      </tr>
      <tr>
        <th>PERIODE</th>
