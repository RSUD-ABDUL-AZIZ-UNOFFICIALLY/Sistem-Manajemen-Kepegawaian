<%- include('layout/header') -%>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <div class="text-center mb-4">
              <img src="/asset/img/Lambang_KotaSingkawang.webp" alt="Logo" height="50">
              <h5 class="card-title mt-2">Sistem Informasi Manajemen Kepegawaian</h5>
              <h5 class="card-title mt-2">RSUD dr. Abdul Aziz</h5>
            </div>
            <form>
              <div class="form-group">
                <label for="phone" class="form-label">Nomor Whatsapp</label>
                <div class="input-group">
                  <input type="number" class="form-control" id="phone" name="phone" autocomplete="on" required />
                  <button type="button" class="btn btn-outline-secondary" id="send-otp">
                    Minta OTP
                  </button>
                </div>
              </div>
              <div class="form-group">
                <label for="otp">One-Time Password (OTP)</label>
                <input type="number" class="form-control" id="otp" name="otp" required />
                <div class="mt-3 text-justify">
                  <p class="card-text text-muted"><small>One-Time Password (OTP) telah dikirim ke nomor Whatsapp Anda
                      yang
                      terdaftar.</small></p>
                </div>
              </div>
              <button type="submit" class="btn btn-primary float-end">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="installModal" tabindex="-1" aria-labelledby="installModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="installModalLabel">Instal Aplikasi</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Instal aplikasi ini untuk mendapatkan pengalaman yang lebih baik.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
          <button type="button" class="btn btn-primary" id="installButton">Instal</button>
        </div>
      </div>
    </div>
  </div>
  <script src="/asset/js/lib/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
  <!-- SweetAlert2 JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.8/sweetalert2.min.js"></script>
  <script src="/asset/js/src/module/helper_3.min.js"></script>
  <script src="/asset/js/template/login.min.js"></script>
  <script src="/asset/js/template/install.min.js"></script>
  <%- include('layout/footer') -%>