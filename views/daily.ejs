<%- include('admin/head'); %>
<%- include('admin/header'); %>
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Work productivity</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form>
          <div class="card-body">
            <div class="form-group">
              <label for="InputTanggal">Tanggal</label>
              <input type="date" class="form-control" id="InputTanggal" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="InputActivities">Details Of Work Activities/Duty</label>
              
              <textarea class="form-control" rows="3" id="InputActivities" placeholder="Activities ..."></textarea>
            </div>
            <div class="form-group">
              <label for="InputVolume">Activity Volume</label>
              <input type="number" class="form-control" id="InputVolume" placeholder="Number unit">
            </div>
            <div class="form-group">
                <label for="exampleSelectBorder">Activity Unit</label>
                <select class="custom-select form-control" id="exampleSelectBorder">
                  <option>-</option>
                  <option>Dokumen</option>
                  <option>Laporan</option>
                </select>
              </div>
            <div class="form-group">
              <label for="InputCompletion">Completion Time</label>
              <div class="input-group mb-3">
                <input type="number" class="form-control" id="InputCompletion" placeholder="Minutes">
                <div class="input-group-append">
                  <span class="input-group-text">Minutes</span>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
</div>
<%- include('admin/footer'); %>